<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GSM_Designer"
        xmlns:Controls="clr-namespace:GSM_Designer.Controls" x:Class="GSM_Designer.CanvasSizeDialog"
        mc:Ignorable="d"
        Title="CanvasSize" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Grid Grid.Row="1" Margin="0,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Primary Canvas Dimensions" Margin="0,4"/>
        <Controls:SizeControl Grid.Row="1"/>

        <Label Content="Secondary Canvases Crop box size" Grid.Row="2" Margin="0,4"/>
        <Controls:SizeControl Grid.Row="3"/>

        <Button Content="Apply" Grid.Row="4" Margin="73,16,0,0" Click="Button_Click" CommandParameter="ok"/>
        <Button Content="OK" Grid.Row="4" Margin="0,16,16,0" HorizontalAlignment="Right" Click="Button_Click" CommandParameter="apply"/>
    </Grid>
</Window>
