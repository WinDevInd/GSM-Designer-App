<base:CustomWindow x:Class="GSM_Designer.Pages.PatternNameWindow"
        xmlns:base="clr-namespace:GSM_Designer.Pages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GSM_Designer.Pages"
        mc:Ignorable="d"
        Title="Enter Pattern Name" Height="200" Width="300" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="0,16">
        <Label Content="Enter Pattern Name" Margin="16,0" Padding="0,4" />
        <TextBox x:Name="TextBox" Margin="16,4" Padding="4,3,4,4" FontSize="14"
                 TextChanged="TextBox_TextChanged"
                 HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" MinWidth="250" VerticalAlignment="Stretch"/>
        <Button x:Name="NextButton" Content="Next" HorizontalAlignment="Right" IsEnabled="False" Click="NextButton_Click" />
    </StackPanel>
</base:CustomWindow>
